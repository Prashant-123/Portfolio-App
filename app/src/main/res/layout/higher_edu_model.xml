<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="75dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="SSCBS"
                android:id="@+id/inst_name"
                android:fontFamily="@font/futura_medium"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/course"
                android:fontFamily="@font/open_sans_semibold"
                android:text="B.Sc(H) Computer Science"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/degree_overlay"
                        android:fontFamily="@font/futura_medium"
                        android:text="Under-Graduate"
                        android:id="@+id/post"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/year_overlay"
                        android:fontFamily="@font/futura_medium"
                        android:text="2016 - 2019"
                        android:paddingLeft="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="15dp"
                        android:id="@+id/yop"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/performance"
                android:fontFamily="@font/open_sans_semibold"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:id="@+id/performance"
                android:text="Performance:  8.8 CGPA"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/high_ed_pic_model"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="15dp"
            android:src="@drawable/me"
            app:layout_constraintBottom_toBottomOf="@+id/main_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_card"/>


</android.support.constraint.ConstraintLayout>